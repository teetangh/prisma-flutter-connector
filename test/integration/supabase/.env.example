# Supabase connection
# Get these from your Supabase project settings
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key-here"

# Database connection (from Supabase project settings > Database > Connection string)
# Session pooler (Transaction mode) - used for migrations and queries
SUPABASE_DATABASE_URL="postgresql://postgres.your-project:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres"

# Direct connection (Session mode) - required for migrations
# From Supabase project settings > Database > Connection string > Direct connection
SUPABASE_DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres"

# GraphQL backend URL
GRAPHQL_ENDPOINT="http://localhost:4003/graphql"
